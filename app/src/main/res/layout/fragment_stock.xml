<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:id="@+id/namestock"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/graphic"
        tools:ignore="MissingConstraints" />

    <com.castprogramm.investgame.CostView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/graphic"
        app:layout_constraintTop_toBottomOf="@id/namestock"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/quantity_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Введите количество акций:"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/graphic"
        tools:ignore="MissingConstraints" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Продать"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toBottomOf="@id/graphic"
        android:gravity="left"
        android:id="@+id/sold"
        tools:ignore="MissingConstraints" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Купить"
        android:id="@+id/buy"
        android:layout_marginTop="200dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/graphic"
        android:gravity="center"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>